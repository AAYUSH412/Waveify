# ðŸš‚ Railway Environment Configuration for Waveify API
# Copy this file to .env in production or set these in Railway dashboard

# Deployment Configuration
NODE_ENV=production

# Railway automatically provides PORT variable
# PORT=4000  # Railway will override this

# API Configuration
API_BASE_URL=https://your-app-name.up.railway.app

# Security Settings (Railway automatically handles HTTPS)
TRUST_PROXY=true

# Performance Settings
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# Optional: Custom settings for your app
# Add any custom environment variables your app needs here
# API_SECRET_KEY=your-secret-key
# DATABASE_URL=your-database-url

# Railway-specific optimizations
RAILWAY_HEALTHCHECK_TIMEOUT=30
RAILWAY_RESTART_POLICY=on-failure

# Logging level for Railway
LOG_LEVEL=info
